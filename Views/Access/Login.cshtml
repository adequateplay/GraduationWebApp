
@model GraduationWebApp.Models.Users;
@{
    ViewData["Title"] = "Авторизация";
}



<div class="d-flex justify-content-center">
    <div class="container ">
        <div class="row">
            <div id="authcard" class="col-lg-4 offset-lg-4 text-center">
                <form asp-controller="Access" asp-action="Login" method="post" class="container mt-5">
                    <h1 class="text-center">Авторизация</h1>
                    <div class="form-group text-center mt-5">
                        <input type="email" class="form-control" placeholder="Почта" asp-for="Email" />
                    </div>
                    <div class="form-group text-center mt-5">
                        <input type="password" class="form-control" placeholder="Пароль" asp-for="Password" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-5">Войти</button>
                    @if (ViewData["ValidateMessage"] != null)
                    {
                        <div class="mt-3">
                            <label>@ViewData["ValidateMessage"]</label>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>



