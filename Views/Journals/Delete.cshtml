@model GraduationWebApp.Models.Journals

@{
    ViewData["Title"] = "Удалить запись";
}

<h2>Удалить запись</h2>

<form asp-action="Delete">
    <div class="form-group">
        <h4>Вы уверены, что хотите удалить эту запись?</h4>
        <div>
            <label>ID записи: @Model.JournalId</label>
        </div>
        <div>
            <label>Дата: @Model.EntryDate</label>
        </div>
        <div>
            <label>Запись: @Model.Entry</label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="UserIndex" class="btn btn-secondary">Отмена</a>
    </div>
</form>
