@model GraduationWebApp.Models.Journals

@{
    ViewData["Title"] = "Добавить запись";
}

<h2>Добавить запись</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Entry" class="control-label"></label>
        <textarea asp-for="Entry" class="form-control"></textarea>
        <span asp-validation-for="Entry" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="UserIndex">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
