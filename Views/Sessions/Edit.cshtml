@model GraduationWebApp.Models.Sessions

@{
    ViewData["Title"] = "Редактирование сессии";
}

<h1>Редактирование сессии</h1>

<h4>Сессия</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="GroupId" />
            <div class="form-group">
                <label asp-for="GroupId" class="control-label">Группа</label>
                <select class="form-control" asp-items="ViewBag.Groups" id="GroupName"></select>
            </div>
            <div class="form-group">
                <label asp-for="SessionDate" class="control-label"></label>
                <input asp-for="SessionDate" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" type="time" />
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" type="time" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
